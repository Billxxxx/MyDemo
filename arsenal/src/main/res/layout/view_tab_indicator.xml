<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/center_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="2.2dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tab_iv_image"
            android:layout_width="@dimen/main_bottom_tab_item_icon_width_height"
            android:layout_height="@dimen/main_bottom_tab_item_icon_width_height"
            android:contentDescription="@null"
            tools:src="@mipmap/ic_launcher_round"/>

        <TextView
            android:id="@+id/tab_tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:textColor="#ff847d7b"
            android:textSize="@dimen/main_bottom_tab_item_textsize"
            tools:text="消息"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/read_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/center_layout"
        android:layout_alignTop="@id/center_layout"
        android:layout_marginRight="-3dp"
        android:layout_marginTop="-2dp"
        android:src="@drawable/read_point_small"
        android:visibility="gone"
        tools:visibility="visible"/>
</RelativeLayout>
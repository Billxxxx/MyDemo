<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
            name="postBean"
            type="com.bill.billdemo.entity.PostBean"/>
    </data>

    <LinearLayout
        android:id="@+id/user_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="13dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/content_tv"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/user_type_icon_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:visibility="@{postBean.userByType.showIcon?View.VISIBLE:View.GONE}"
            app:iconImageUrl="@{postBean.userByType.iconUrl}"
            tools:background="@drawable/icon_face_space"/>

        <TextView
            android:id="@+id/user_type_small_title_tv"
            style="@style/ContentTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_left_right"
            android:layout_toRightOf="@id/user_type_icon_iv"
            android:layout_weight="1"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text='@{postBean.userByType.name + @string/de + postBean.strByType}'
            android:textSize="12sp"
            tools:text="用户名"/>

        <TextView
            android:id="@+id/ad_bottom_tv"
            style="@style/ContentTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:lineSpacingExtra="0dp"
            android:maxLines="1"
            android:text="@{postBean.readCommentNum}"
            tools:text="time"/>
    </LinearLayout>
</layout>

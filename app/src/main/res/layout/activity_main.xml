<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_pager_fragment_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <com.arsenal.bill.views.MyViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="5.3dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bottom_up_shadow_and_line"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_bottom_bar_height"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/tab_layout_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tab_iv_1"
                    android:layout_width="@dimen/main_bottom_icon_w_h"
                    android:layout_height="@dimen/main_bottom_icon_w_h"
                    android:src="@drawable/main_tab_selector_1"/>

                <TextView
                    android:id="@+id/tab_tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:enabled="false"
                    android:includeFontPadding="false"
                    android:text="资讯"
                    android:textColor="@drawable/tab_main_text_color_selector"
                    android:textSize="10sp"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_layout_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tab_iv_2"
                    android:layout_width="@dimen/main_bottom_icon_w_h"
                    android:layout_height="@dimen/main_bottom_icon_w_h"
                    android:src="@drawable/main_tab_selector_2"/>

                <TextView
                    android:id="@+id/tab_tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:enabled="false"
                    android:includeFontPadding="false"
                    android:text="研究"
                    android:textColor="@drawable/tab_main_text_color_selector"
                    android:textSize="10sp"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_layout_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tab_iv_3"
                    android:layout_width="@dimen/main_bottom_icon_w_h"
                    android:layout_height="@dimen/main_bottom_icon_w_h"
                    android:src="@drawable/main_tab_selector_3"/>

                <TextView
                    android:id="@+id/tab_tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:enabled="false"
                    android:includeFontPadding="false"
                    android:text="消息"
                    android:textColor="@drawable/tab_main_text_color_selector"
                    android:textSize="10sp"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_layout_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tab_iv_4"
                    android:layout_width="@dimen/main_bottom_icon_w_h"
                    android:layout_height="@dimen/main_bottom_icon_w_h"
                    android:src="@drawable/main_tab_selector_4"/>

                <TextView
                    android:id="@+id/tab_tv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:enabled="false"
                    android:includeFontPadding="false"
                    android:text="我"
                    android:textColor="@drawable/tab_main_text_color_selector"
                    android:textSize="10sp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>